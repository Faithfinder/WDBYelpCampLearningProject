<% include ../partials/header %>
<div class="container">
    <h1 class="text-center mb-5">Edit <%= campground.name %></h1>

    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <input class="form-control my-2" type="text" placeholder="Name" name="campground[name]" value="<%= campground.name %>">
        <input class="form-control my-2" type="text" placeholder="Image URL" name="campground[image]" value="<%= campground.image %>">
        <input class="form-control my-2" type="text" placeholder="Description" name="campground[description]" value="<%= campground.description %>">
        <button class="btn btn-primary btn-block my-2"> Submit</button>
    </form>
</div>
<% include ../partials/footer %>